<h2>
  <%= DAYS_OF_WEEK[@game.start_time.wday] %>, <%= MONTHS[@game.start_time.month - 1] %> <%= @game.start_time.day %>
</h2>

<h3>
  <a href="/groups/<%= @game.group_id %>">
    <%= @game.group_name %>
  </a>
</h3>

<p>
  Location: <%= @game.location %>
  <br>
  Attendees: <%= @game.filled_slots %> / <%= @game.total_slots %>
  <br>
  Fee: $<%= @game.fee %>
  <br>
</p>

<p>
  <%= @game.notes %>
</p>

<table>
  <tr>
    <th>Name</th>
    <th>Payment Confirmed?</th>
  </tr>
  <% @game.players.each do |player| %>
  <tr>
    <td>
      <% unless player.username.nil? %>
        <a href="/players/<%= player.id %>">
      <% end %>
          <%= player.name %>
      <% unless player.username.nil? %>
        </a>
      <% end %>
    <td>
    <td><%= player.fee_paid %></td>
  </tr>
  <% end %>
</table>

<form action="/games/<%= @game_id %>/players" method="post">
  <dl>
    <dt>
      <label for="player_name">RVSP for this game:</label>
    </dt>
    <dd>
      <input name="player_name" placeholder="Your name" type="text">
    </dd>
  </dl>
  <button type="submit">Register</button>
</form>

<% content_for :header_links do %>
  <a href="/game_list">Games</a>
  <a href="/group_list">Groups</a>
<% end %>
