<!doctype html>
<html lang="en-US">
  <head>
    <title>🏸Badminton Buddies</title>
    <meta charset="UTF-8">
  </head>

  <body>
    <header>
      <h1>Badminton Buddies</h1>
        <div>
          <% if session[:logged_in] %>
            <em>Signed in as <%= session[:username] %>.</em>
            <form class="inline" method="post" action="/logout">
              <button type="submit">Sign Out</button>
            </form>
          <% else %>
            <form method="get" action="/login">
              <button type="submit">Sign In</button>
            </form>
          <% end %>
        </div>
      <div>
        <%== yield_content :header_links %>
      </div>

      <% if session[:error] %>
        <div class="flash error">
          <p><%= session.delete(:error) %></p>
        </div>
      <% end %>

      <% if session[:success] %>
        <div class="flash success">
          <p><%= session.delete(:success) %></p>
        </div>
      <% end %>
    </header>

    <main>
      <%== yield %>
    </main>

    <footer>
      Made by <a href="https://github.com/PeterSHua">Peter Hua</a>
    </footer>

  </body>
</html>
