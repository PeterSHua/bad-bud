<!doctype html>
<html lang="en-US">
  <head>
    <title>🏸Badminton Buddies</title>
    <meta charset="UTF-8">
  </head>

  <body>
    <header>
      <h1>Badminton Buddies</h1>
      <div>
        <%== yield_content :header_links %>
      </div>

      <% if session[:error] %>
        <div class="flash error">
          <p><%= session.delete(:error) %></p>
        </div>
      <% end %>

      <% if session[:success] %>
        <div class="flash success">
          <p><%= session.delete(:success) %></p>
        </div>
      <% end %>
    </header>

    <main>
      <%== yield %>
    </main>

    <footer>
      Made by <a href="https://github.com/PeterSHua">Peter Hua</a>
    </footer>

  </body>
</html>
