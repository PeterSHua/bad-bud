<!doctype html>
<html lang="en-US">
  <head>
    <title>🏸Badminton Buddies</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans">
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body>
    <header>
      <div class="hero">
        <h1>Badminton Buddies</h1>
      </div>

      <div class="account-links">
        <% if session[:logged_in] %>
          <em>Signed in as <a href="/players/<%= session[:player_id] %>"><%= session[:username] %></a></em>
          <form class="inline" method="post" action="/logout">
            <button type="submit">Sign Out</button>
          </form>
        <% else %>
          <form method="get" action="/login">
            <button type="submit">Sign In</button>
          </form>
        <% end %>
      </div>

      <div id="header-links">
        <%== yield_content :header_links %>
      </div>

      <% if session[:error] %>
        <div class="flash error">
          <p><%= session.delete(:error) %></p>
        </div>
      <% end %>

      <% if session[:success] %>
        <div class="flash success">
          <p><%= session.delete(:success) %></p>
        </div>
      <% end %>
    </header>

    <main>
      <%== yield %>
    </main>

    <footer>
      Made by <a href="https://github.com/PeterSHua">Peter Hua</a>
    </footer>

  </body>
</html>
