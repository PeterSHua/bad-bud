<!doctype html>
<html lang="en-US">
  <head>
    <title>Badminton Buddies</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans">
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body>
    <header>
      <div class="hero">
        <a href="/game_list"><h1>Bad Buds</h1></a>
      </div>

      <div class="account">
        <% if session[:logged_in] %>
          <form method="post" action="/logout">
            <button type="submit">Sign Out</button>
          </form>
        <% end %>
      </div>

      <nav>
        <ul>
          <li>
            <a class="orange-link" href="/game_list">&#127992; Games</a>
          </li>

          <li>
            <a class="orange-link" href="/group_list">&#128101; Groups</a>
          </li>

          <% if session[:logged_in] %>
            <li>
              <a class="orange-link" href="/players/<%= session[:player_id] %>">&#128100; Profile</a>
            </li>
          <% else %>
            <a class="orange-link" href="/login">&#128273; Sign In</a>
          <% end %>
        </ul>
      </nav>

      <% if session[:error] %>
        <div class="flash error">
          <%= session.delete(:error) %>
        </div>
      <% end %>

      <% if session[:success] %>
        <div class="flash success">
          <%= session.delete(:success) %>
        </div>
      <% end %>
    </header>

    <main>
      <%== yield %>
    </main>

    <footer>
      Made with <span style="color: #e25555;">&#9829;</span> by <a class="orange-link" href="https://github.com/PeterSHua">Peter Hua</a>
    </footer>

  </body>

  <script src="/javascript/bad_buds.js"></script>
</html>
