<!doctype html>
<html lang="en-US">
  <head>
    <title>🏸Badminton Buddies</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=PT+Sans">
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body>
    <header>
      <div class="hero">
        <h1>Badminton Buddies</h1>
      </div>

      <div id="login-links">
        <%== yield_content :login_links %>
      </div>

      <nav>
        <%== yield_content :header_links %>
      </nav>

      <% if session[:error] %>
        <div class="flash error">
          <p><%= session.delete(:error) %></p>
        </div>
      <% end %>

      <% if session[:success] %>
        <div class="flash success">
          <%= session.delete(:success) %>
        </div>
      <% end %>
    </header>

    <main>
      <%== yield %>
    </main>

    <footer>
      Made by <a class="orange-link" href="https://github.com/PeterSHua">Peter Hua</a>
    </footer>

  </body>
</html>
