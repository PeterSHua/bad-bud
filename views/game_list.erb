<% if session[:logged_in] %>
  <a class="orange-link" href="/games/create">&#10133; Create Game</a>
<% end %>

<h2>Upcoming Games</h2>

<ul id="red-list">
  <% @game_list.each do |game| %>
    <a href="/games/<%= game.id %>">
      <li>
        <h2><%= DAYS_OF_WEEK[game.start_time.wday] %>, <%= MONTHS[game.start_time.month - 1] %> <%= game.start_time.day %></h2>
        <p>
          &#128100;<%= game.filled_slots %> / <%= game.total_slots %>
        </p>
        <br>
        <h3><%= game.group_name %></h3>
        <%= game.location %>
        <br>
        <%= display_time(game) %>
     </li>
    </a>
  <% end %>
</ul>
