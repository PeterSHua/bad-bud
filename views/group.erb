<h2>
  <%= @group.name %>
</h2>
<p>
  <%= @group.about %>
  <br>
  <% if session[:logged_in] && group_organizer?(@group.id, session[:player_id]) %>
    <a class="orange-link" href="/groups/<%= @group.id %>/schedule">ðŸ“… Schedule</a>
  <% end %>
</p>

<h2>Upcoming Games</h2>
<ul id="red-list">
  <% @group_games.each do |game| %>
    <a href="/games/<%= game.id %>">
      <li>
        <h2><%= DAYS_OF_WEEK[game.start_time.wday] %>, <%= MONTHS[game.start_time.month - 1] %> <%= game.start_time.day %></h2>
        <p>
          &#128100; <%= game.filled_slots %> / <%= game.total_slots %>
        </p>
        <br>
        <%= game.location %>
        <br>
        <%= display_time(game) %>
    </li>
    </a>
  <% end %>
</ul>

<h2>Members</h2>
<ol>
  <% @group_players.each do |player| %>
    <li>
      <a class="orange-link" href="/players/<%= player.id %>">
        <%= player.name %>
      </a>

      <% if player.is_organizer %>
        &#128081;
      <% end %>
    </li>
  <% end %>
</ol>
