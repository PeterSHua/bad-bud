<h2><%= @player.username %></h2>

<p>
  <a class="orange-link" href="https://www.dropbox.com/s/vmk48yybqhd35dj/rr-rating-reformatted.pdf?dl=0">Rating:</a> <%= @player.rating%>
</p>

<p>
  <b><%= @player.name%></b>
  <br>
    <% if profile_pic_exists? %>
      <img src="/images/<%= @player.username %>.jpg">
    <% end %>
  <br>
  <%= @player.about %>
</p>

<% if profile_owner?(@player_id) %>
  <a class="orange-link" href="/players/<%= @player_id %>/edit">&#128221; Edit Profile</a>
<% end %>
